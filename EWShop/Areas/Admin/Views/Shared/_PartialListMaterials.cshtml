@model IEnumerable<EWShop.Areas.Admin.Models.Material>
@if (Model != null)
{
    <table class="table table-bordered table-striped table-materials">
        <thead>
            <tr>
                <th>Material Code</th>
                <th>Material Description</th>
                <th>Modeltype</th>
                <th>Plant Code</th>
                <th>Plant Name</th>
            </tr>
            <tr>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="col-id" data-id="@item.materialId">@item.materialCode</td>
                        <td>@item.materialDescription</td>
                        <td>@item.model</td>
                        <td>@item.plantCode</td>
                        <td>@item.plantName</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
