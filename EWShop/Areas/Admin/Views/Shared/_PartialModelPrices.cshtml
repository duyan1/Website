@model IEnumerable<EWShop.Areas.Admin.Models.MaterialExcel>

@if (Model != null)
{
    if (Model.Count() > 0)
    {
    <table class="table table-bordered table-material-prices">
        <thead>
            <tr>
                <th>Model(Aqua)</th>
                <th>Model</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Currency</th>
                <th>FrmDate</th>
                <th>ToDate</th>
                <th>Status</th>
                <th>Remarks</th>
            </tr>
            <tr>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
                <th></th>
                <th><input class="form-control form-filter" placeholder="Tìm kiếm ..." /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-mtname" data-id="@item.MATID" title="@item.MATName">@(item.MATName == "" ? "(No data)" : item.MATName)</td>
                    <td class="col-model" data-id="@item.ID">@item.ModelType</td>
                    <td class="col-price" title="@item.Price">@(item.Price == "" ? "(No data)" : item.Price)</td>
                    <td class="col-discount">@item.Discount</td>
                    <td class="col-currency center" style="width:130px!important;">@(item.Currency == "" ? "(No data)" : item.Currency)</td>
                    <td class="col-frmDate">@item.FrmDate</td>
                    <td class="col-toDate">@item.ToDate</td>
                    @if (item.Flat == "True")
                    {
                        <td class="col-status center"><img src="@Url.Content("~/Libraries/dist/img/icon_green.png")" style="width: 25px;height:25px;" /></td>
                    }
                    else
                    {
                        <td class="col-status center"><img src="@Url.Content("~/Libraries/dist/img/icon_red.png")" style="width: 25px;height:25px;" /></td>
                    }
                    
                    <td class="col-remarks">@item.Remarks</td>
                </tr>
            }
        </tbody>
    </table>
    } else
    {
        <p style="text-align: center; padding: 5px 5px 0;margin: 0;">Không có dữ liệu</p>
    }
} else
{
    <p>Không có dữ liệu</p>
}