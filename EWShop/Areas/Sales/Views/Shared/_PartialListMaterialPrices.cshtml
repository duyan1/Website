@model IEnumerable<EWShop.Areas.Sales.Models.MaterialPriceModel>
@if (Model != null)
{
    <table class="table table-bordered table-striped table-materials">
        <thead>
            <tr>
                <th>MatCode</th>
                <th>ModelType</th>
                <th>Amount</th>
                <th>MRP</th>
                <th>SDP</th>
                <th>Currency</th>
                <th>BeginDate</th>
                <th>Changed</th>
                <th>Transfered</th>
            </tr>
            <tr>
                <th><input class="form-control" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control" placeholder="Tìm kiếm ..." /></th>
                <th><input class="form-control" placeholder="Tìm kiếm ..." /></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="row-item">
                        <td class="col-code">@item.matCode</td>
                        <td class="col-model">@item.matName</td>
                        @if (!"0".Equals(item.amount_old) && !item.amount.Equals(item.amount_old))
                        {
                            <td class="col-mrp" style="color: brown;" title="Old: @item.amount_old">@item.amount</td>
                        }
                        else
                        {
                            <td class="col-mrp">@item.amount</td>
                        }
                        @if (!"0".Equals(item.marketRetailPrice_old) && !item.marketRetailPrice.Equals(item.marketRetailPrice_old))
                        {
                            <td class="col-mrp" style="color: brown;" title="Old: @item.marketRetailPrice_old">@item.marketRetailPrice</td>
                        }
                        else
                        {
                            <td class="col-mrp">@item.marketRetailPrice</td>
                        }
                        @if (!"0".Equals(item.sampleDisplayPrice_old) && !item.sampleDisplayPrice.Equals(item.sampleDisplayPrice_old))
                        {
                            <td class="col-mrp" style="color: brown;" title="Old: @item.sampleDisplayPrice_old">@item.sampleDisplayPrice</td>
                        }
                        else
                        {
                            <td class="col-mrp">@item.sampleDisplayPrice</td>
                        }
                        <td class="col-curr">@item.currency</td>
                        <td class="col-begin">@item.beginDate</td>
                        <td>@item.isChanged</td>
                        @if ("True".Equals(item.isTransfered))
                        {
                            <td class="center"><img src="@Url.Content("~/Libraries/dist/img/icon_green.png")" style="width: 25px;height:25px;" /></td>
                        }
                        else
                        {
                            <td class="center"><img src="@Url.Content("~/Libraries/dist/img/transfer.png")" style="width: 25px;height:25px;" /></td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
}
