            width: 100% !important;
        }
        .select2-container .select2-selection--single .select2-selection__rendered{
            font-size: 13px;
        }
        .center {
            text-align: center !important;
        }

        .form-control {
            width: 100% !important;
            font-size: 12.5px;
            padding: 5px;
            height: 25px;
        }

        table.dataTable {
            margin: 0 auto;
            width: 100%;
            clear: both;
            border-collapse: collapse;
            table-layout: fixed;
            margin-top: 0!important;
        }

